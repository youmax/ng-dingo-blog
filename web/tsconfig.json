{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@app": [
        "app/*"
      ],
      "@app/core": [
        "app/core/index.ts"
      ],
      "@app/layout": [
        "app/layout/index.ts"
      ],
      "@app/route": [
        "app/app-routing.module.ts"
      ],
      "@app/shared": [
        "app/shared/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
}